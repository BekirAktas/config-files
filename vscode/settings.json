{
    "workbench.colorTheme": "Community Material Theme Ocean High Contrast",
    "editor.cursorBlinking": "smooth",
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "files.autoSave": "onFocusChange",
    "window.restoreFullscreen": true,
    "editor.formatOnSave": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.autoClosingBrackets": "never",
    "editor.lineNumbers": "off",
    "diffEditor.renderSideBySide": false,
    "extensions.ignoreRecommendations": true,
    "workbench.activityBar.visible": false,
    // Vim setup
    "vim.enableNeovim": false,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.searchHighlightColor": "rgba(150, 255, 255, 0.3)",
    "vim.leader": "<space>",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": [
        "#8FBCBB",
        "#000"
    ],
    "vim.statusBarColors.insert": [
        "#BF616A",
        "#000"
    ],
    "vim.statusBarColors.visual": [
        "#FAD02C",
        "#000"
    ],
    "vim.statusBarColors.visualline": [
        "#FAD02C",
        "#000"
    ],
    "vim.statusBarColors.visualblock": [
        "#A3BE8C",
        "#000"
    ],
    "vim.statusBarColors.replace": "#D08770",
    "vim.statusBarColors.commandlineinprogress": "#007ACC",
    "vim.statusBarColors.searchinprogressmode": "#007ACC",
    "vim.statusBarColors.easymotionmode": "#007ACC",
    "vim.statusBarColors.easymotioninputmode": "#007ACC",
    "vim.statusBarColors.surroundinputmode": "#007ACC",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.minimap.enabled": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#8FBCBB",
        "statusBar.noFolderBackground": "#8FBCBB",
        "statusBar.debuggingBackground": "#8FBCBB",
        "statusBar.foreground": "#000",
        "statusBar.debuggingForeground": "#000"
    },
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "s"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusSideBar"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "i"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.focus"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusActiveEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.quickOpen"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "n"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "v"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.splitEditor"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusFirstEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "l"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusSecondEditorGroup"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.view.explorer"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "s"
            ],
            "after": [],
            "commands": [
                {
                    "command": "thunder-client-sidebar.focus"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "n"
            ],
            "after": [],
            "commands": [
                {
                    "command": "thunder-client.new-request"
                }
            ]
        },
        {
            "before": [
                "<leader>",
                "g",
                "c"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.view.scm"
                }
            ]
        },
    ]
}